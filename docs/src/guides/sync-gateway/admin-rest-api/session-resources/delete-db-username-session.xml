         id="delete-db-username-session">
   <title>DELETE /{db}/_user/{name}/_session</title>
   <description>Deletes all sessions for a user</description>
   <introduction>
      <paragraph>This request deletes all sessions for a specified user.</paragraph>
   </introduction>
   <topics>
      <topic id="request">
         <title>Request</title>
         <body>
